{
	"typography-colors": {
        "interactive": "lightest purple",
        "background": "dark royal-blue",
        "gold": "#FFAB01",
        "royal-blue": "#08224C",
        "text": "gold"
	},
	"typography-kit": {
        "minimum-point-size": 10,
        "maximum-point-size": 100,
		"point-step-size": 2,
		"point-step-multiplier": 1
	},
	"ui-font-text-styles": {
		"heading": {
			"font-name": "Avenir-Medium",
			"point-size": 36,
			"text-color": "text",
			"letter-case": "regular"
		},
		"paragraph": {
			"font-name": "Avenir-Medium",
			"point-size": 16,
			"text-color": "text",
			"letter-case": "regular"
		},
        "interactive-text": {
            "extends": "paragraph",
            "text-color": "interactive"
        }
	}
}
